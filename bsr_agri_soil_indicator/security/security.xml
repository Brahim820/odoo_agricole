<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Catégorie de sécurité Analyses Agricoles -->
        <record id="module_category_bsr_agri_soil_indicator" model="ir.module.category">
            <field name="name">Analyses Agricoles</field>
            <field name="sequence">50</field>
        </record>

        <!-- Groupe Utilisateur Analyses -->
        <record id="group_soil_indicator_user" model="res.groups">
            <field name="name">Utilisateur Analyses</field>
            <field name="category_id" ref="module_category_bsr_agri_soil_indicator"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut consulter et créer des analyses de sol et de culture.</field>
        </record>

        <!-- Groupe Technicien Analyses -->
        <record id="group_soil_indicator_technician" model="res.groups">
            <field name="name">Technicien Analyses</field>
            <field name="category_id" ref="module_category_bsr_agri_soil_indicator"/>
            <field name="implied_ids" eval="[(4, ref('group_soil_indicator_user'))]"/>
            <field name="comment">Peut réaliser et valider les analyses, gérer les alertes.</field>
        </record>

        <!-- Groupe Responsable Analyses -->
        <record id="group_soil_indicator_manager" model="res.groups">
            <field name="name">Responsable Analyses</field>
            <field name="category_id" ref="module_category_bsr_agri_soil_indicator"/>
            <field name="implied_ids" eval="[(4, ref('group_soil_indicator_technician'))]"/>
            <field name="comment">Accès complet aux analyses, configuration des types et paramètres.</field>
        </record>

        <!-- Règles d'enregistrement multi-entreprise -->
        <record id="soil_analysis_comp_rule" model="ir.rule">
            <field name="name">Analyses de sol: multi-entreprise</field>
            <field name="model_id" ref="model_bsr_soil_analysis"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <record id="culture_analysis_comp_rule" model="ir.rule">
            <field name="name">Analyses de culture: multi-entreprise</field>
            <field name="model_id" ref="model_bsr_culture_analysis"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <record id="analysis_type_comp_rule" model="ir.rule">
            <field name="name">Types d'analyse: multi-entreprise</field>
            <field name="model_id" ref="model_bsr_analysis_type"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <record id="analysis_parameter_comp_rule" model="ir.rule">
            <field name="name">Paramètres d'analyse: multi-entreprise</field>
            <field name="model_id" ref="model_bsr_analysis_parameter"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <record id="analysis_alert_comp_rule" model="ir.rule">
            <field name="name">Alertes d'analyse: multi-entreprise</field>
            <field name="model_id" ref="model_bsr_analysis_alert"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

    </data>
</odoo>