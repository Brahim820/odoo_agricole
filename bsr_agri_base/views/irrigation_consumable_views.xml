<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Tree des Consommables d'Irrigation -->
    <record id="view_irrigation_consumable_tree" model="ir.ui.view">
        <field name="name">bsr.irrigation.consumable.tree</field>
        <field name="model">bsr.irrigation.consumable</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="diameter"/>
                <field name="flow_rate"/>
                <field name="stock_qty"/>
                <field name="stock_uom"/>
                <field name="standard_price"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des Consommables d'Irrigation -->
    <record id="view_irrigation_consumable_form" model="ir.ui.view">
        <field name="name">bsr.irrigation.consumable.form</field>
        <field name="model">bsr.irrigation.consumable</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du consommable"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Code du consommable"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="left">
                            <field name="type"/>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group name="right">
                            <field name="currency_id" invisible="1"/>
                            <field name="stock_qty"/>
                            <field name="stock_uom"/>
                            <field name="standard_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Spécifications Techniques">
                            <group>
                                <group name="dimensions">
                                    <separator string="Dimensions" colspan="2"/>
                                    <field name="diameter" attrs="{'invisible': [('type', 'in', ['pompe', 'reservoir'])]}"/>
                                    <field name="length" attrs="{'invisible': [('type', 'in', ['raccord', 'goutte_goutte', 'asperseur', 'vanne', 'filtre', 'pompe', 'reservoir'])]}"/>
                                </group>
                                <group name="performance">
                                    <separator string="Performance" colspan="2"/>
                                    <field name="pressure_rating"/>
                                    <field name="flow_rate" attrs="{'invisible': [('type', 'in', ['tuyau', 'raccord', 'vanne', 'filtre'])]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Utilisation">
                            <group>
                                <field name="farm_ids" widget="many2many_tags"/>
                                <field name="parcel_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Description">
                            <field name="description" placeholder="Description du consommable..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des Consommables d'Irrigation -->
    <record id="view_irrigation_consumable_kanban" model="ir.ui.view">
        <field name="name">bsr.irrigation.consumable.kanban</field>
        <field name="model">bsr.irrigation.consumable</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="stock_qty"/>
                <field name="stock_uom"/>
                <field name="standard_price"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="text-muted"><field name="code"/></span>
                                    </div>
                                    <span class="o_kanban_record_title">
                                        <field name="type"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Stock:</strong><br/>
                                            <field name="stock_qty"/> <field name="stock_uom"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Prix:</strong><br/>
                                            <field name="standard_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les Consommables d'Irrigation -->
    <record id="action_irrigation_consumable" model="ir.actions.act_window">
        <field name="name">Consommables d'Irrigation</field>
        <field name="res_model">bsr.irrigation.consumable</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier consommable d'irrigation !
            </p>
            <p>
                Gérez vos consommables d'irrigation : tuyaux, raccords, goutteurs, asperseurs, vannes, filtres, pompes, réservoirs, etc.
            </p>
        </field>
    </record>

</odoo>