<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Tree des Fermes -->
    <record id="view_farm_tree" model="ir.ui.view">
        <field name="name">bsr.farm.tree</field>
        <field name="model">bsr.farm</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="total_surface"/>
                <field name="cultivated_surface"/>
                <field name="parcel_count"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='to_validate'" decoration-success="state in ['validated','operational']" decoration-muted="state in ['suspended','archived']"/>
                <field name="partner_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des Fermes -->
    <record id="view_farm_form" model="ir.ui.view">
        <field name="name">bsr.farm.form</field>
        <field name="model">bsr.farm</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Boutons de workflow -->
                    <button name="action_submit_for_validation" string="Soumettre pour validation" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_validate" string="Valider" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'to_validate')]}"/>
                    <button name="action_set_operational" string="Rendre opérationnelle" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'validated')]}"/>
                    <button name="action_suspend" string="Suspendre" type="object" class="btn-warning" attrs="{'invisible': [('state', 'not in', ['validated', 'operational'])]}"/>
                    <button name="action_reactivate" string="Réactiver" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'suspended')]}"/>
                    <button name="action_archive" string="Archiver" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['draft', 'to_validate', 'archived'])]}"/>
                    <button name="action_reset_to_draft" string="Remettre en brouillon" type="object" attrs="{'invisible': [('state', '!=', 'to_validate')]}"/>
                    
                    <!-- StatusBar -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_validate,validated,operational"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_parcels" type="object" class="oe_stat_button" icon="fa-th-large">
                            <field name="parcel_count" widget="statinfo" string="Parcelles"/>
                        </button>
                        <button name="%(maintenance.hr_equipment_action)d" type="action" class="oe_stat_button" icon="fa-wrench" context="{'default_farm_id': active_id}">
                            <field name="equipment_count" widget="statinfo" string="Équipements"/>
                        </button>
                        <button name="%(fleet.fleet_vehicle_action)d" type="action" class="oe_stat_button" icon="fa-car" context="{'default_farm_id': active_id}">
                            <field name="vehicle_count" widget="statinfo" string="Véhicules"/>
                        </button>
                        <button name="action_irrigation_consumable" type="object" class="oe_stat_button" icon="fa-tint">
                            <field name="irrigation_consumable_count" widget="statinfo" string="Consommables"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la ferme"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Code de la ferme"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="left">
                            <field name="partner_id" attrs="{'readonly': [('state', 'in', ['operational', 'archived'])]}"/>
                            <field name="email" widget="email" attrs="{'readonly': [('state', '=', 'archived')]}"/>
                            <field name="phone" widget="phone" attrs="{'readonly': [('state', '=', 'archived')]}"/>
                            <field name="mobile" widget="phone" attrs="{'readonly': [('state', '=', 'archived')]}"/>
                            <field name="active"/>
                        </group>
                        <group name="right">
                            <field name="total_surface" attrs="{'readonly': [('state', 'in', ['operational', 'archived'])], 'required': [('state', 'in', ['to_validate', 'validated', 'operational'])]}"/>
                            <field name="cultivated_surface"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Adresse">
                            <group>
                                <group>
                                    <field name="street" placeholder="Rue..."/>
                                    <field name="street2" placeholder="Rue 2..."/>
                                    <field name="city" placeholder="Ville"/>
                                </group>
                                <group>
                                    <field name="state_id" placeholder="État/Région"/>
                                    <field name="zip" placeholder="Code postal"/>
                                    <field name="country_id" placeholder="Pays"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parcelles" attrs="{'readonly': [('state', 'in', ['draft', 'archived'])]}">
                            <field name="parcel_ids" attrs="{'readonly': [('state', '=', 'archived')]}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="surface"/>
                                    <field name="soil_type"/>
                                    <field name="state"/>
                                    <field name="culture_id"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Équipements de Maintenance">
                            <field name="equipment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="technician_user_id"/>
                                    <field name="owner_user_id"/>
                                    <field name="model"/>
                                    <field name="serial_no"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Flotte de Véhicules">
                            <field name="vehicle_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="license_plate"/>
                                    <field name="model_id"/>
                                    <field name="driver_id"/>
                                    <field name="fuel_type"/>
                                    <field name="state_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Consommables d'Irrigation">
                            <field name="irrigation_consumable_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="type"/>
                                    <field name="stock_qty"/>
                                    <field name="stock_uom"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description" placeholder="Description de la ferme..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des Fermes -->
    <record id="view_farm_kanban" model="ir.ui.view">
        <field name="name">bsr.farm.kanban</field>
        <field name="model">bsr.farm</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="total_surface"/>
                <field name="cultivated_surface"/>
                <field name="parcel_count"/>
                <field name="partner_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="text-muted"><field name="code"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Localisation:</strong><br/>
                                            <field name="city"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Propriétaire:</strong><br/>
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <strong>Surface totale:</strong><br/>
                                            <field name="total_surface"/> ha
                                        </div>
                                        <div class="col-6">
                                            <strong>Surface cultivée:</strong><br/>
                                            <field name="cultivated_surface"/> ha
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info">
                                            <field name="parcel_count"/> parcelles
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les Fermes -->
    <record id="action_farm" model="ir.actions.act_window">
        <field name="name">Fermes</field>
        <field name="res_model">bsr.farm</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première ferme !
            </p>
            <p>
                Une ferme peut contenir plusieurs parcelles où vous pourrez cultiver différents types de cultures.
            </p>
        </field>
    </record>

</odoo>