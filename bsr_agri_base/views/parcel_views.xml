<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Tree des Parcelles -->
    <record id="view_parcel_tree" model="ir.ui.view">
        <field name="name">bsr.parcel.tree</field>
        <field name="model">bsr.parcel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="farm_id"/>
                <field name="surface"/>
                <field name="soil_type"/>
                <field name="state"/>
                <field name="culture_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form des Parcelles -->
    <record id="view_parcel_form" model="ir.ui.view">
        <field name="name">bsr.parcel.form</field>
        <field name="model">bsr.parcel</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,cultivated,rest,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_culture" type="object" class="oe_stat_button" icon="fa-leaf">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="culture_id" invisible="1"/>
                                    <span attrs="{'invisible': [('culture_id', '!=', False)]}">Aucune</span>
                                    <span attrs="{'invisible': [('culture_id', '=', False)]}">
                                        <field name="culture_id" readonly="1" nolabel="1"/>
                                    </span>
                                </span>
                                <span class="o_stat_text">Culture Actuelle</span>
                            </div>
                        </button>
                        <button name="action_view_culture_history" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="culture_count" widget="statinfo" string="Historique"/>
                        </button>
                        <button name="%(maintenance.hr_equipment_action)d" type="action" class="oe_stat_button" icon="fa-wrench" context="{'default_parcel_id': active_id}">
                            <field name="equipment_count" widget="statinfo" string="Équipements"/>
                        </button>
                        <button name="action_view_vehicles" type="object" class="oe_stat_button" icon="fa-car">
                            <field name="vehicle_count" widget="statinfo" string="Véhicules"/>
                        </button>
                        <button name="action_view_irrigation_consumables" type="object" class="oe_stat_button" icon="fa-tint">
                            <field name="irrigation_consumable_count" widget="statinfo" string="Consommables"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la parcelle"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Code de la parcelle"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="left">
                            <field name="farm_id" options="{'no_create': True}"/>
                            <field name="surface"/>
                            <field name="culture_id"/>
                            <field name="active"/>
                        </group>
                        <group name="right">
                            <field name="soil_type"/>
                            <field name="slope"/>
                            <field name="irrigation"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Localisation GPS">
                            <group>
                                <group>
                                    <field name="latitude"/>
                                </group>
                                <group>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Historique des Cultures">
                            <field name="culture_ids">
                                <tree decoration-success="state=='finished'" decoration-info="state in ['planted','growing']" decoration-warning="state=='ready'" decoration-danger="state=='cancelled'">
                                    <field name="name"/>
                                    <field name="culture_type_id"/>
                                    <field name="variety"/>
                                    <field name="start_date"/>
                                    <field name="expected_end_date"/>
                                    <field name="actual_end_date"/>
                                    <field name="state" widget="badge"/>
                                    <field name="actual_yield"/>
                                    <field name="yield_unit"/>
                                    <field name="profitability" widget="percentage"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Équipements">
                            <field name="equipment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="technician_user_id"/>
                                    <field name="model"/>
                                    <field name="serial_no"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Véhicules">
                            <field name="vehicle_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="license_plate"/>
                                    <field name="model_id"/>
                                    <field name="driver_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Consommables d'Irrigation">
                            <field name="irrigation_consumable_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="type"/>
                                    <field name="stock_qty"/>
                                    <field name="stock_uom"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description" placeholder="Description de la parcelle..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des Parcelles -->
    <record id="view_parcel_kanban" model="ir.ui.view">
        <field name="name">bsr.parcel.kanban</field>
        <field name="model">bsr.parcel</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="code"/>
                <field name="farm_id"/>
                <field name="surface"/>
                <field name="soil_type"/>
                <field name="state"/>
                <field name="culture_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="text-muted"><field name="code"/></span>
                                    </div>
                                    <span class="o_kanban_record_title">
                                        <field name="surface"/> ha
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Ferme:</strong> <field name="farm_id"/>
                                    </div>
                                    <div t-if="record.soil_type.raw_value">
                                        <strong>Sol:</strong> <field name="soil_type"/>
                                    </div>
                                    <div t-if="record.culture_id.raw_value">
                                        <strong>Culture:</strong> <field name="culture_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les Parcelles -->
    <record id="action_parcel" model="ir.actions.act_window">
        <field name="name">Parcelles</field>
        <field name="res_model">bsr.parcel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première parcelle !
            </p>
            <p>
                Les parcelles sont des subdivisions de vos fermes où vous cultiverez vos cultures.
                Chaque parcelle peut accueillir une seule culture à la fois.
            </p>
        </field>
    </record>

</odoo>