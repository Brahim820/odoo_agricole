<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Action spécifique pour les compétences agricoles -->
        <record id="action_hr_skill_agriculture" model="ir.actions.act_window">
            <field name="name">Compétences Agricoles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.skill</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première compétence agricole
                </p>
                <p>
                    Les compétences agricoles permettent de classifier et évaluer
                    les savoir-faire spécifiques au secteur agricole.
                </p>
            </field>
        </record>

        <!-- Action pour les employés avec compétences agricoles -->
        <record id="action_hr_employee_agricultural_skills" model="ir.actions.act_window">
            <field name="name">Employés - Compétences Agricoles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Gérer les compétences agricoles des employés
                </p>
                <p>
                    Consultez et gérez les compétences agricoles spécialisées
                    de vos employés et leurs certifications.
                </p>
            </field>
        </record>

    </data>
</odoo>