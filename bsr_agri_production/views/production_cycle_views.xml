<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== CYCLE DE PRODUCTION ========== -->
    
    <!-- Vue Tree -->
    <record id="view_production_cycle_tree" model="ir.ui.view">
        <field name="name">bsr.production.cycle.tree</field>
        <field name="model">bsr.production.cycle</field>
        <field name="arch" type="xml">
            <tree string="Cycles de Production" decoration-info="state=='draft'" decoration-warning="state=='planned'" decoration-success="state=='active'" decoration-danger="state=='failed'" decoration-muted="state=='cancelled'">
                <field name="code"/>
                <field name="name"/>
                <field name="campaign_id"/>
                <field name="parcel_id"/>
                <field name="culture_id"/>
                <field name="variety"/>
                <field name="current_phase" widget="badge"/>
                <field name="start_date"/>
                <field name="planned_end_date"/>
                <field name="cultivated_area"/>
                <field name="planned_harvest_qty"/>
                <field name="actual_harvest_qty"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='planned'" decoration-success="state=='active'" decoration-danger="state=='failed'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="view_production_cycle_form" model="ir.ui.view">
        <field name="name">bsr.production.cycle.form</field>
        <field name="model">bsr.production.cycle</field>
        <field name="arch" type="xml">
            <form string="Cycle de Production">
                <header>
                    <button name="action_plan" string="Planifier" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_start" string="Démarrer" type="object" states="planned" class="oe_highlight"/>
                    <button name="action_advance_phase" string="Phase Suivante" type="object" states="active" class="oe_highlight"/>
                    <button name="action_complete" string="Terminer" type="object" states="active"/>
                    <button name="action_fail" string="Marquer Échec" type="object" states="planned,active"/>
                    <button name="action_cancel" string="Annuler" type="object" states="draft,planned"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,planned,active,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom du cycle..."/>
                        </h1>
                        <label for="code" class="oe_edit_only"/>
                        <h3>
                            <field name="code" placeholder="Code..."/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Informations Générales">
                            <field name="campaign_id" required="1"/>
                            <field name="parcel_id" required="1" domain="[('farm_id', '=', farm_id)]"/>
                            <field name="culture_id" required="1"/>
                            <field name="variety"/>
                            <field name="farm_id" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group string="Phase et Dates">
                            <field name="current_phase"/>
                            <field name="start_date" required="1"/>
                            <field name="planned_end_date" required="1"/>
                            <field name="actual_end_date" attrs="{'readonly': [('state', '!=', 'active')]}"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Surface et Plantation">
                            <field name="cultivated_area" required="1"/>
                            <field name="planted_quantity"/>
                            <field name="planted_unit"/>
                        </group>
                        <group string="Durée">
                            <field name="planned_duration" readonly="1"/>
                            <field name="actual_duration" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Prévisions">
                            <field name="planned_harvest_qty"/>
                            <field name="expected_yield" readonly="1"/>
                        </group>
                        <group string="Réalisé">
                            <field name="actual_harvest_qty"/>
                            <field name="actual_yield" readonly="1"/>
                        </group>
                    </group>
                    
                    <field name="description" placeholder="Description du cycle de production..."/>
                    
                    <group>
                        <field name="active"/>
                        <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_production_cycle_kanban" model="ir.ui.view">
        <field name="name">bsr.production.cycle.kanban</field>
        <field name="model">bsr.production.cycle</field>
        <field name="arch" type="xml">
            <kanban string="Cycles de Production" default_group_by="current_phase" class="o_kanban_small_column">
                <field name="color"/>
                <field name="name"/>
                <field name="code"/>
                <field name="parcel_id"/>
                <field name="culture_id"/>
                <field name="current_phase"/>
                <field name="progress"/>
                <field name="state"/>
                <field name="cultivated_area"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small>
                                            <field name="code"/> - <field name="culture_id"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'planned': 'warning', 'active': 'success', 'completed': 'info', 'failed': 'danger', 'cancelled': 'default'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span><i class="fa fa-map-marker"/> <field name="parcel_id"/></span>
                                        </div>
                                        <div class="col-6">
                                            <span><i class="fa fa-arrows-alt"/> <t t-esc="record.cultivated_area.value"/> ha</span>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" t-att-style="'width: ' + record.progress.value + '%'">
                                                    <t t-esc="Math.round(record.progress.value)"/>%
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_production_cycle_search" model="ir.ui.view">
        <field name="name">bsr.production.cycle.search</field>
        <field name="model">bsr.production.cycle</field>
        <field name="arch" type="xml">
            <search string="Rechercher Cycles">
                <field name="name" string="Cycle" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
                <field name="campaign_id"/>
                <field name="parcel_id"/>
                <field name="culture_id"/>
                <field name="variety"/>
                <separator/>
                <filter string="En Cours" name="active" domain="[('state','=','active')]"/>
                <filter string="Planifiés" name="planned" domain="[('state','=','planned')]"/>
                <filter string="Terminés" name="completed" domain="[('state','=','completed')]"/>
                <separator/>
                <filter string="Cette Saison" name="this_season" domain="[('start_date','&gt;=', (context_today() + relativedelta(months=-6)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Phase Croissance" name="growth_phase" domain="[('current_phase','in',['growth','flowering','fruiting'])]"/>
                <filter string="Prêt Récolte" name="harvest_ready" domain="[('current_phase','in',['harvest_ready','harvest'])]"/>
                <separator/>
                <filter string="Archivé" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Phase" name="group_phase" context="{'group_by':'current_phase'}"/>
                    <filter string="Campagne" name="group_campaign" context="{'group_by':'campaign_id'}"/>
                    <filter string="Culture" name="group_culture" context="{'group_by':'culture_id'}"/>
                    <filter string="Parcelle" name="group_parcel" context="{'group_by':'parcel_id'}"/>
                    <filter string="Mois de Début" name="group_start_month" context="{'group_by':'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Calendar -->
    <record id="view_production_cycle_calendar" model="ir.ui.view">
        <field name="name">bsr.production.cycle.calendar</field>
        <field name="model">bsr.production.cycle</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des Cycles" date_start="start_date" date_stop="planned_end_date" color="culture_id" mode="month">
                <field name="name"/>
                <field name="parcel_id"/>
                <field name="current_phase"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_production_cycle" model="ir.actions.act_window">
        <field name="name">Cycles de Production</field>
        <field name="res_model">bsr.production.cycle</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="search_view_id" ref="view_production_cycle_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier cycle de production
            </p>
            <p>
                Un cycle de production correspond à la culture d'une
                variété spécifique sur une parcelle donnée, de la plantation
                à la récolte.
            </p>
        </field>
    </record>

</odoo>