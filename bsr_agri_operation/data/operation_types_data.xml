<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Séquence pour les opérations -->
        <record id="seq_culture_operation" model="ir.sequence">
            <field name="name">Opération de Culture</field>
            <field name="code">bsr.culture.operation</field>
            <field name="prefix">OP</field>
            <field name="padding">6</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Catégories de produits pour les opérations -->
        <record id="product_category_fertilizer" model="product.category">
            <field name="name">Engrais</field>
        </record>

        <record id="product_category_pesticide" model="product.category">
            <field name="name">Pesticides</field>
        </record>

        <record id="product_category_seed" model="product.category">
            <field name="name">Semences</field>
        </record>

        <record id="product_category_fuel" model="product.category">
            <field name="name">Carburants</field>
        </record>

        <!-- Unités de mesure spécifiques agriculture -->
        <record id="uom_hectare" model="uom.uom">
            <field name="name">Hectare</field>
            <field name="category_id" ref="uom.uom_categ_surface"/>
            <field name="factor">10000.0</field>
            <field name="uom_type">bigger</field>
            <field name="rounding">0.0001</field>
        </record>

    </data>
</odoo>